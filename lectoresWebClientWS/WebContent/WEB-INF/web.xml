<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    version="3.1">

    <display-name>Lectores Web Client</display-name>
    
    <!-- Welcome page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>GestionUsuariosServlet</servlet-name>
        <servlet-class>servlets.GestionUsuariosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GestionUsuariosServlet</servlet-name>
        <url-pattern>/gestionUsuarios</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditarUsuarioServlet</servlet-name>
        <servlet-class>servlets.EditarUsuarioServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditarUsuarioServlet</servlet-name>
        <url-pattern>/editarUsuario</url-pattern>
    </servlet-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
</web-app>