<!DOCTYPE hibernate-configuration PUBLIC 
"-//Hibernate/Hibernate Configuration DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://host.docker.internal:5432/pap-lectores</property>
        <property name="hibernate.connection.username">lectoruy</property>
        <property name="hibernate.connection.password">pap12345</property>

        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        
        <mapping class="lectoresuy.biblioteca.entidades.Usuario"/>
	    <mapping class="lectoresuy.biblioteca.entidades.Lector"/>
	    <mapping class="lectoresuy.biblioteca.entidades.Bibliotecario"/>
        <mapping class="lectoresuy.biblioteca.entidades.Material"/>
        <mapping class="lectoresuy.biblioteca.entidades.Libro"/>
        <mapping class="lectoresuy.biblioteca.entidades.Articulo"/>
	    <mapping class="lectoresuy.biblioteca.entidades.Prestamo"/>
    </session-factory>
</hibernate-configuration>
